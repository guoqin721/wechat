/**index.wxss**/
.main{
  width: 100%;
  height: 100%;
}
.main-nav{
  height: 35px;
  width: 100%;
  background-color: #eee;
}
.main-nav ul{
  height: 35px;
  width: 100%;
  display: flex;
  background: #eee;
  border-bottom:1px solid #ccc;
  
}
.slide-image{
  width: 100%;
}
.main-nav ul li{
  flex:1;
  display: flex;
  height: 35px;
  font-size: 14px;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.main-nav ul li.active{
  border-bottom: 2px solid #3cc51f;
}